<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leave Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/login-style.min.css" rel="stylesheet" />
    
    <style>
    .body-path { background: url('https://members.nape.org.ng/application/views/nape/static/assets/images/big/auth-bg.jpg') no-repeat center center; background-size: cover; }
</style>
</head>



<body class="container-fluid body-path">




    <div class="main-wrapper p-15 ">
        <div class="container ">

            @RenderBody()
        </div>



    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>


    <script>
        $(function () {
            // initialize the db record to be a datatable
            $('.table').DataTable();


            $(".datepicker").datepicker({
                dateFormat: "yyyy-mm-dd"
            });
        });

    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- This section will render all script section defined in any views-->
    <script src="~/js/feather.min.js.download"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Leave Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
