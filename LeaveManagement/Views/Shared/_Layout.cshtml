<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leave Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


<body>
   


        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand " style="width:15%;" asp-area="" asp-controller="Home" asp-action="Index">Leave Manager</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between container fs">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="Index"> Dashboard &nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white small" asp-area="" asp-controller="Employees" asp-action="Profile"> My Profile &nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white small" asp-area="" asp-controller="LeaveRequests" asp-action="Create"> Apply For Leave  &nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white small" asp-area="" asp-controller="LeaveRequests" asp-action="MyLeave"> My Leave  &nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white small" asp-area="" asp-controller="PublicHolidays" asp-action="Index"> Public Holidays </a>
                            </li>

                            @if (User.IsInRole(Roles.Administrator) || User.IsInRole(Roles.Supervisor) || User.IsInRole(Roles.Group_Head) || User.IsInRole(Roles.HR) || User.IsInRole(Roles.ED) || User.IsInRole(Roles.MD))
                            {
                                if (User.IsInRole(Roles.HR) || User.IsInRole(Roles.Administrator))
                                {

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white small" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                            Employee Management
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="nav-link text-dark small" asp-area="" asp-controller="Employees" asp-action="GetSystemUsers"><i class="fa fa-user-secret"></i> User By Roles &nbsp;</a>
                                            <a class="nav-link text-dark small" asp-area="" asp-controller="Employees" asp-action="GetEmployees"><i class="fa fa-users"></i> Employee List &nbsp;</a>
                                        </div>
                                    </li>
                                

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white small" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                        Leave Management
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item small" asp-controller="LeaveTypes" asp-action="Index">Leave Types</a>
                                        <a class="dropdown-item small" asp-controller="LeaveAllocations" asp-action="Index">Leave Alloation</a>
                                        <a class="dropdown-item small">Allocation Report</a>
                                        @*<div class="dropdown-divider"></div>*@

                                    </div>
                                </li>
                                }
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white small" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                        Approve Requests
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item small" asp-controller="LeaveRequests" asp-action="Index">Dashboard</a>
                                        <a class="dropdown-item small" asp-controller="LeaveRequests" asp-action="Index">Process Request</a>
                                        <a class="dropdown-item small">Leave Report</a>
                                        @*<div class="dropdown-divider"></div>*@

                                    </div>
                                </li>

                            }




                        </ul>
                        }
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
   
    <div class="container-fluid p-5">
        <main role="main" class="container-fluid  ">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Leave Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>


    <script>
        $(function () {
            // initialize the db record to be a datatable
            $('.table').DataTable();


            $(".datepicker").datepicker({
                dateFormat: "yyyy-mm-dd"
            });
        });

    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- This section will render all script section defined in any views-->

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
