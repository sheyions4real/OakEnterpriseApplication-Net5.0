@using Microsoft.AspNetCore.Identity

<!-- how to inject a class into the view -->
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="navbar-nav mt-1">

    @if (SignInManager.IsSignedIn(User))  // check if the user is signed in
    {
    <li class="nav-item mt-2 mr-2">
        <form class="form-inline small" asp-area="Identity" asp-page="/Account/Manage/Index">
            <button type="submit" class="nav-link btn btn-link text-white ">Welcome @User.Identity?.Name </button>
        </form>

        @*<a class="nav-link btn btn-link text-white " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><small>Welcome @User.Identity?.Name </small></a>*@
    </li>
        <li class="nav-item  mt-2 mr-5">
            <form class="form-inline small" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white bg-cyan  btn-sm pr-3 "> <i class="fa fa-lock mr-1"></i> Logout </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
