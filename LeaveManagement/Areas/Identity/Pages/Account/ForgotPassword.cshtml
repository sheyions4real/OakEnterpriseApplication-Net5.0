@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="auth-wrapper row d-flex justify-content-center align-content-center ">
    <div class="col-md-6 card shadow-sm p-30 ">

        <br />
        <div class="logo">
            <span class="db">

                <img src="~/assets/images/logo-icon.png" alt="logo" />
            </span>
            <h5 class="font-medium mb-3">Forgot Password?</h5>
        </div>
      <br />
        <h4>Enter your email.</h4>
        <hr />
        <div class="row d-flex justify-content-center ">
            <div class="col-md-10">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <a href="/Identity/Account/login" class="btn btn-dark mr-3"> <i class="fa fa-arrow-left-long"></i> Back to Login </a>
                    <button type="submit" class="btn btn-primary">Submit</button>

                    <br /><br />
                </form>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
